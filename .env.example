# Example .env file for configuring the application environment

# The stage of the application (e.g., development, production)
STAGE=

# URL to connect to the PostgreSQL database
# Format: postgresql://<username>:<password>@<host>:<port>/<database_name>
DB_URL=postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME

# Boolean flag to determine if the database schema should be synchronized on startup
# This should generally be set to 'false' in production to avoid data loss
DB_SYNC=

# Port number on which the application server will listen
PORT=

